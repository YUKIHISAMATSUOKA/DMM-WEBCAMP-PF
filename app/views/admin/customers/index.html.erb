<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 offset-col-lg-4 mx-auto">

      <h4 class="my-4 text-center"><span>  ユーザー　一覧画面　</span></h4>

      <table class="table col-10 mx-auto">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%=  customer.id %></td>
          <td class="background2"><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
            <% if customer.member_state == true %>
              <td  class="text-success">有効</td>
            <% else %>
              <td>退会</td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>


    </div>
  </div>
</div>