<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 offset-col-lg-4 mx-auto">
      <h4 class="my-4 text-center"><span>  ショップ　一覧画面　</span></h4>

    <table class="table col-10 mx-auto background">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>名前</th>
          <th>エリア</th>
          <th>住所</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @shops.each do |shop| %>
        <tr>
          <td><%= shop.id %></td>
          <td class="background2"><%= link_to shop.name, admin_shop_path(shop) %></td>
          <td><%= shop.area.name %></td>
          <td><%= shop.address %></td>
          <td><%= shop.email %></td>
            <% if shop.status == true %>
              <td  class="text-success">営業中</td>
            <% else %>
              <td>営業休止中</td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= paginate @shops %>


    </div>
  </div>
</div>