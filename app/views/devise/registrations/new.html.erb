<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 offset-col-lg-4 mx-auto">
      <h4 class="my-4 text-center"><span style="background-color:#EFEFEF">  新規　会員登録</span></h4>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= flash[:error] %>


      <!--会員情報入力フォーム-->
      <table class="table table-borderless table-responsive">
        <tr>
          <th>名前</th>
          <th><%= f.label :"(姓)" %></th>
          <th><%= f.text_field :last_name, autofocus: true, :placeholder => "令和", required: true  %></th>
          <th><%= f.label :"(名)" %></th>
          <th><%= f.text_field :first_name, autofocus: true, :placeholder => "道子", required: true  %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= f.label :"(セイ)" %></th>
          <th><%= f.text_field :kana_last_name, autofocus: true, :placeholder => "レイワ", required: true %></th>
          <th><%= f.label :"(メイ)" %></th>
          <th><%= f.text_field :kana_first_name, autofocus: true, :placeholder => "ミチコ", required: true %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@exaample.com", required: true %></th>
          <th></th>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th></th>
          <th><%= f.text_field :post_code, autofocus: true, :placeholder => "0000000", required: true %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th></th>
          <th colspan="2"><%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0",  class: 'form-control', required: true %></th>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <th></th>
          <th><%= f.text_field :telephone_number, autofocus: true, :placeholder => "00000000000", required: true %></th>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <th></th>
          <th><%= f.password_field :password, autocomplete: "new-password", required: true %></th>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <th></th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %></th>
        </tr>
        <tr>
          <th></th>
          <th></th>
          <th><%= f.submit "　　新規登録　　" , class:'btn btn-success' %></th>
        </tr>
        <% end %>
      </table>


    <h4 class="my-4 text-center"><span style="background-color:#EFEFEF">　既に登録済みの方　</span></h4>
      <P class="my-4 text-center"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</P>
    </div>
  </div>
</div>