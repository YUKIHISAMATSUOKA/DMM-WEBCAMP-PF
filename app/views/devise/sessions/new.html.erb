<div class="login">
  <div class="login-triangle"></div>

  <h2 class="login-header">ログイン 画面</h2>
  <%= flash[:error] %>
  <div class="login-container">
    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
    <p type="email" placeholder="Email"><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "@exaample.com" %></p>
    <p type="password" placeholder="Password"><%= f.password_field :password, autocomplete: "current-password" %></p>
    <p type="submit" value="Log in"><%= f.submit "ログイン" %></p>
    <% end %>
  </div>
</div>