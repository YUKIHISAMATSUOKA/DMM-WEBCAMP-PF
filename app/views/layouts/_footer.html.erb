<div id="sp-fixed-menu" class="for-sp">
  <ul>
    <!--<li><a href="#">お問い合わせ</a></li>-->
    <!--<li><a href="#">資料請求</a></li>-->

    <!--１、カスタマーログイン状態か否か-->
    <% if customer_signed_in? %>
      <li class="nav-item">
        <%= link_to areas_path, class: 'nav-link text-white', method: :get do %>
          <i class="fas fa-store">探す</i>
        <% end %>
      </li>

      <li class="nav-item">
        <%= link_to cart_items_path, class: 'nav-link text-white', method: :get do %>
          <i class="fas fa-shopping-cart">カート</i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to orders_path, class: 'nav-link text-white', method: :get do %>
          <i class="fas fa-list-ul fa-2x">注文</i>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to customers_path, class: 'nav-link text-white', method: :get do %>
          <i class="fas fa-user-cog fa-2x"></i>
        <% end %>
      </li>

      <!--カレントユーザーがお店を作成したら表示される-->
      <% if current_customer.shop.present? %>
        <li class="nav-item">
          <%= link_to shop_path(current_customer.shop), class: 'nav-link text-white', method: :get do %>
            <i class="fas fa-home fa-2x">マイショップ</i>
          <% end %>
        <li class="nav-item">
          <%= link_to order_shop_index_path, class: 'nav-link text-white', method: :get do %>
            <i class="fas fa-truck fa-2x">マイショップの注文</i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to notifications_path, class: 'nav-link text-white', method: :get do %>
            <% if unchecked_notifications.any? %>
              <span class="fa-stack">
                <i class="fas fa-bell fa-2x"></i>
                <i class="fas fa-circle n-circle"></i>
              </span>
            <% else %>
              <i class="fas fa-bell fa-2x"></i>
            <% end %>
          <% end %>
        </li>
      <% end %>

      <!--最後に消す部分-->
      <li class="nav-item">
        <%= link_to "", genres_path, class: 'nav-link text-white' %>
      </li>
      <li class="nav-item">
        <%= link_to "支払い", payments_path, class: 'nav-link text-white' %>
      </li>
      <li class="nav-item">
        <%= link_to "", new_area_path, class: 'nav-link text-white' %>
      </li>

　　　<!--2，カスタマーログインしてない状態-->
    <% else %>
      <li class="nav-item">
        <%= link_to "TOP", root_path, class: 'nav-link text-white' %>
      </li>
      <li class="nav-item">
        <%= link_to "お店を探す", root_path, class: 'nav-link text-white' %>
      </li>
      <li class="nav-item">
        <%= link_to "使いかた", home_how_path, class: 'nav-link text-white' %>
      </li>
      <li class="nav-item">
        <%= link_to "アカウント登録", new_customer_registration_path, data: {"turbolinks" => false}, class: 'nav-link text-white' %>
      </li>
      <li class="nav-item">
        <%= link_to "ログイン", new_customer_session_path, data: {"turbolinks" => false}, class: 'nav-link text-white' %>
      </li>
    <% end %>




  </ul>
</div>