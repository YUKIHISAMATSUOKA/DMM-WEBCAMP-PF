<header class="bg-dark">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">


          <!--１、カスタマーログイン状態か否か-->
          <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to areas_path, class: 'nav-link text-white', method: :get do %>
                <i class="fas fa-store">お店を探す</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to cart_items_path, class: 'nav-link text-white', method: :get do %>
                <i class="fas fa-shopping-cart">カート</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to root_path, class: 'nav-link text-white', method: :get do %>
                <i class="fas fa-list-ul">注文履歴</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to customers_path, class: 'nav-link text-white', method: :get do %>
                <i class="fas fa-user-cog">マイページ</i>
              <% end %>
            </li>

            <!--カレントユーザーがお店を作成したら表示される-->
            <% if current_customer.shop.present? %>
              <li class="nav-item">
                <%= link_to shop_path(current_customer.shop), class: 'nav-link text-white', method: :get do %>
                  <i class="fas fa-home">マイショップ</i>
                <% end %>
              </li>
            <% end %>

             <!--最後に消す部分-->
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-white' %>
