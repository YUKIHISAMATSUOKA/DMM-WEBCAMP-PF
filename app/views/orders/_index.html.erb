<!--注文一覧部分-->
<% orders.each do |order| %>
  <div class="order-index-box">
    <h5 class="order-index-box-text">
      注文時間: <%= order.created_at.strftime('%Y/%m/%d %H:%M') %><br>
      注文番号: <%= order.number %><br>
      店舗名: <%= order.shop.name %><br>
      <!--まずは商品名-->
      <% order.order_items.each do |order_item| %><br>
        <%= order_item.item.name %>
      <% end %>
    </h5>
    <!--次に商品写真-->
    <div class="order-index-box-picture">
      <%= link_to order_path(order) do %>
        <%= attachment_image_tag order.shop, :image, :fill, 200, 200, fallback: "no_image.jpg", size:'200x200', class: 'rounded-circle' %>



    <% order.order_items.each do |order_item| %>
      <%= attachment_image_tag order_item.item, :image, :fill, 150, 150, fallback: "no_image.jpg", size:'150x150', class: 'rounded-circle' %>
    <% end %>
    <% end %>
　　</div>

  </div>
<% end %>