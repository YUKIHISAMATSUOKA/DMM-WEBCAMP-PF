<!--@shopに紐づいている商品のみを表示させる-->
<!--コントローラーで@items = @shop.itemsとしているので　ここはitemsだけでok-->

<% items.each do |item| %>

  <!--item.stateがfalseなら、写真の表示に斜め線などを入れる-->
  <% if item.sale_state == false %>
    <div class="item-box">
      <div class="item-box-picture">
      　<%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no_image.jpg", size:'200x200', class: 'rounded-circle' %>
        <% end %>
      </div>
      <h6 class="item-box-name sale_state">販売停止中</h6>
    </div>

  <% else %>
    <div class="item-box">
      <div class="item-box-picture">
      　<%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no_image.jpg", size:'200x200', class: 'rounded-circle' %>
        <% end %>
      </div>
      <h6 class="item-box-name"><%= item.name %><%= item.price %>円</h6>
    </div>
  <% end %>

<% end %>